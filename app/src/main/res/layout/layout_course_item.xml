<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="253dp"
    android:layout_margin="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/course_image_view"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_photo_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="연인산 남두봉 "
            android:textColor="@color/custom_black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_image_view" />

        <TextView
            android:id="@+id/item_distance"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/str_course_distance"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_title" />

        <TextView
            android:id="@+id/item_height"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/str_course_height"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/item_distance"
            app:layout_constraintTop_toBottomOf="@+id/course_title" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/str_course_time"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/item_height"
            app:layout_constraintTop_toBottomOf="@+id/course_title" />

        <TextView
            android:id="@+id/item_distance_value"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="1km"
            android:textColor="@color/custom_black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_distance" />

        <TextView
            android:id="@+id/item_heigh_value"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="500m"
            android:textColor="@color/custom_black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/item_distance_value"
            app:layout_constraintTop_toBottomOf="@+id/item_height" />

        <TextView
            android:id="@+id/item_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5시간 18분 23초"
            android:textColor="@color/custom_black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/item_heigh_value"
            app:layout_constraintTop_toBottomOf="@+id/item_time" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_review"
            app:srcCompat="@drawable/ic_star_filled" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background_yellow"
            android:padding="4dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/course_image_view">

            <TextView
                android:id="@+id/item_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_difficulty_medium"
                android:textColor="@color/custom_white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="(21)"
            android:textColor="@color/custom_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="3dp"
            android:text="4.8"
            android:textColor="@color/custom_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_review_count" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>